{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "moduleResolution": "Node10",
    "module": "CommonJS",
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"],
      "functions": ["./src/functions/exports.ts"],
      "types": ["./src/types/exports.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
